<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="80dp" android:id="@+id/image_container" android:longClickable="false"
            android:background="@drawable/background2">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="5dip"
                android:id="@+id/imageView"
                android:contentDescription="logo"
                android:src="@drawable/logo_esteso100"
                android:layout_marginTop="0dp" android:baselineAlignBottom="true"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@drawable/background2"
            android:layout_below="@+id/image_container">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:id="@+id/alert" android:password="false" android:textSize="25dp"
                  android:phoneNumber="false" android:layout_marginTop="10dp" android:layout_marginLeft="45dp"
                  android:textColor="#FF0000" android:visibility="gone"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DebugNoLogin"
                android:id="@+id/buttonNoLogin"
                android:layout_gravity="right|center_vertical"
                />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="user"
                  android:id="@+id/user" android:layout_gravity="left|center_vertical" android:password="false"
                  android:textSize="20dp" android:phoneNumber="false" android:layout_marginTop="10dp"
                  android:layout_marginLeft="45dp" android:textColor="#FFFFFF"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_user" android:hint=" username" android:layout_marginLeft="45dp"
                android:layout_marginRight="50dp"
                android:padding="5dip"
                android:background="@layout/rounded_edittext" android:layout_marginTop="5dp"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="password"
                  android:id="@+id/textView1" android:password="false"
                  android:textSize="20dp" android:phoneNumber="false" android:layout_marginTop="10dp"
                  android:layout_marginLeft="45dp" android:textColor="#FFFFFF"/>
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/edit_password"
                  android:hint=" password" android:layout_marginLeft="45dp" android:layout_marginRight="50dp"
                  android:password="true"
                  android:padding="5dip"
                  android:background="@layout/rounded_edittext"
                  android:layout_marginTop="5dp"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="Login"
                    android:id="@+id/login_button"  android:layout_marginLeft="45dp" android:layout_marginTop="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Register"
                    android:id="@+id/register" android:password="false"
                    android:textSize="25dp" android:textColor="#FFFFFF"
                    android:layout_marginRight="45dp" android:layout_marginTop="10dp"
                    android:clickable="true"/>

        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/mockupFacebookLogin"
                android:contentDescription="FacebookLogin"
                android:src="@drawable/com_facebook_loginbutton_blue_focused"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="5dip"
                android:layout_gravity="center_horizontal">

                    </ImageView>
            </LinearLayout>

    </LinearLayout>
</RelativeLayout>

